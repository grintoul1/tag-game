addvar VAR_MT_PYRE_STATE, 1
end

MtPyre_3F_EventScript_Pyre_MagmaGrunt1::
	msgbox MtPyre_3F_Text_Pyre_MagmaGrunt1PostBattle, MSGBOX_AUTOCLOSE
	end

